
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/dropzone/css")
@Scripts.Render("~/bundles/dropzone")
<script type="text/javascript" src="~/Scripts/SiteScripts/LuckyModule.js"></script>


<div class="row">
    <div class="col-lg-12">
        <div class="form-horizontal">
            <fieldset>
                <legend>Нова Lucky акція</legend>
                <div class="form-group">
                    <label for="name" class="col-md-2 control-label">Назва</label>
                    <div class="col-md-7">
                        <input type="text" class="form-control" id="name" placeholder="Назва"/>
                    </div>
                </div>

                <div class="form-group">
                    <label for="description" class="col-lg-2 control-label">Опис</label>
                    <div class="col-md-7">
                        <textarea rows="5" class="form-control" id="description" placeholder="Назва"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label">Photoes</label>
                    <div class="col-lg-7" >
                        <div class="jumbotron">
                            
                            <form action="/lucky/upload" method="post" enctype="multipart/form-data" class="dropzone" id="dropzoneForm" style="background: none; border: none;">
                                <div class="fallback">
                                    <input name="file" type="file" multiple />
                                    <input type="submit" value="Upload" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
</div>
<script type="text/javascript">
	$(document).ready(function () {
		Window.App.LuckyModule.init();
	});
</script>
